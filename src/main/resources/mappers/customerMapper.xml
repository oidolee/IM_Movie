<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
<mapper namespace="springBoot.ict.movie.dao.CustomerMapper">
	
	<!-- 고객등록 -->
	<insert id="insertCustomer" parameterType="springBoot.ict.movie.dto.CustomerDTO">
		INSERT INTO mvc_customer_tbl(No, email, name, password, hp, birthday)
		VALUES((SELECT NVL(MAX(No)+1, 1) FROM mvc_customer_tbl), #{email}, #{name}, #{password}, #{hp}, #{birthday}) 
	</insert>
	
	<!-- 고객 리스트 -->
	<select id="customerList" resultType="springBoot.ict.movie.dto.CustomerDTO">
		SELECT * FROM mvc_customer_tbl
	</select>
	
	
</mapper>